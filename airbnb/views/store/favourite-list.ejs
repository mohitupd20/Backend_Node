<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto bg-white shadow-2xl rounded-2xl p-10 mt-10 w-full">
      <h2 class="text-4xl text-red-500 font-extrabold text-center mb-10 tracking-tight drop-shadow">My Favourite Homes</h2>
      <div class="grid gap-10 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
        <% if (registeredHomes.length === 0) { %>
          <div class="col-span-full text-center text-gray-400 text-xl py-16">
            <svg class="mx-auto w-16 h-16 text-red-200 mb-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
            No favourites yet. Add homes to your favourites!
          </div>
        <% } %>
        <% registeredHomes.forEach(home => { %>
          <div class="bg-gradient-to-br from-pink-50 to-white p-6 rounded-2xl shadow-xl hover:shadow-2xl transition duration-300 border border-gray-200 flex flex-col h-full max-w-md mx-auto">
            <% if (home.image) { %>
              <img src="<%= home.image %>" alt="Home image" class="w-full h-56 object-cover rounded-xl mb-4 border border-gray-300 shadow-sm" />
            <% } %>
            <h3 class="text-2xl font-bold text-pink-700 mb-2 flex items-center gap-2">
              <svg class="w-6 h-6 text-red-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0h6"/></svg>
              <%= home.registeredHomes %>
            </h3>
            <div class="flex flex-col flex-grow">
              <div class="text-gray-600 mb-2">
                <span class="font-semibold">Location:</span> <%= home.location || 'N/A' %>
              </div>
              <div class="text-gray-600 mb-2">
                <span class="font-semibold">Price/night:</span> Rs.<%= home.pricePerNight || 'N/A' %>
              </div>
              <div class="flex items-center gap-1 text-yellow-500 mb-2">
                <span class="font-semibold text-gray-600">Rating:</span>
                <% if (home.rating) { %>
                  <%= home.rating %>
                  <svg class="w-5 h-5 inline-block" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.967a1 1 0 00.95.69h4.175c.969 0 1.371 1.24.588 1.81l-3.38 2.455a1 1 0 00-.364 1.118l1.287 3.966c.3.922-.755 1.688-1.54 1.118l-3.38-2.454a1 1 0 00-1.175 0l-3.38 2.454c-.784.57-1.838-.196-1.54-1.118l1.287-3.966a1 1 0 00-.364-1.118L2.05 9.394c-.783-.57-.38-1.81.588-1.81h4.175a1 1 0 00.95-.69l1.286-3.967z"/></svg>
                <% } else { %>
                  N/A
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>