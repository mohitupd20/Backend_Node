<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto bg-white shadow-2xl rounded-2xl p-10 mt-10 w-full">
      <h2 class="text-5xl text-red-500 font-extrabold text-center mb-12 tracking-tight drop-shadow">All Registered Homes</h2>
      <div class="grid gap-12 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
        <% if (registeredHomes.length === 0) { %>
          <div class="col-span-full text-center text-gray-400 text-2xl py-20">
            <svg class="mx-auto w-20 h-20 text-red-200 mb-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
            No homes found. Be the first to add a home!
          </div>
        <% } %>
        <% registeredHomes.forEach(home => { %>
          <div class="bg-gradient-to-br from-white via-blue-50 to-pink-50 p-8 rounded-3xl shadow-2xl hover:shadow-3xl transition duration-300 border border-gray-200 flex flex-col h-full max-w-md mx-auto">
            <% if (home.image) { %>
              <img src="<%= home.image %>" alt="Home image" class="w-full h-60 object-cover rounded-2xl mb-6 border border-gray-300 shadow-md" />
            <% } %>
            <h3 class="text-3xl font-bold text-blue-700 mb-4 flex items-center gap-2">
              <svg class="w-7 h-7 text-red-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0h6"/></svg>
              <%= home.registeredHomes %>
            </h3>
            <div class="flex flex-col flex-grow gap-2">
              <div class="text-gray-600">
                <span class="font-semibold">Location:</span> <%= home.location || 'N/A' %>
              </div>
              <div class="text-gray-600">
                <span class="font-semibold">Price/night:</span> <span class="text-green-600 font-bold">Rs.<%= home.pricePerNight || 'N/A' %></span>
              </div>
              <div class="flex items-center gap-2 text-yellow-500">
                <span class="font-semibold text-gray-600">Rating:</span>
                <% if (home.rating) { %>
                  <span class="font-bold"><%= home.rating %></span>
                  <svg class="w-5 h-5 inline-block" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.967a1 1 0 00.95.69h4.175c.969 0 1.371 1.24.588 1.81l-3.38 2.455a1 1 0 00-.364 1.118l1.287 3.966c.3.922-.755 1.688-1.54 1.118l-3.38-2.454a1 1 0 00-1.175 0l-3.38 2.454c-.784.57-1.838-.196-1.54-1.118l1.287-3.966a1 1 0 00-.364-1.118L2.05 9.394c-.783-.57-.38-1.81.588-1.81h4.175a1 1 0 00.95-.69l1.286-3.967z"/></svg>
                <% } else { %>
                  N/A
                <% } %>
              </div>
              <div class="mt-6 flex justify-end">
                <form action="/book/<%= home._id %>" method="POST">
                  <button type="submit" class="px-6 py-2 bg-gradient-to-r from-red-500 to-pink-500 text-white rounded-xl font-semibold shadow hover:from-red-600 hover:to-pink-600 transition">Book</button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>