<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md max-w-xl">
      <h1 class="text-4xl font-extrabold mb-8 text-center text-red-500 drop-shadow"><%= editing  ? "Edit" : "Register" %> Your Home on AirBnB</h1>
      <form action="/host/<%= editing ? "edit-home" : "add-home"%>" method="POST" class="space-y-6" enctype="application/x-www-form-urlencoded">
        <input type="hidden" name="homeId" value="<%= editing ? home.id : "" %>">
        <div>
          <label class="block text-lg font-semibold text-gray-700 mb-2">House Name</label>
          <input
            type="text"
            name="registeredHomes"
            value = "<%= editing ? home.registeredHomes : "" %>"
            placeholder="Enter your House Name"
            class="w-full px-4 py-3 border-2 border-red-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition"
            required
          />
        </div>
        <div class="flex gap-4">
          <div class="flex-1">
            <label class="block text-lg font-semibold text-gray-700 mb-2">Price per Night (INR)</label>
            <input
              type="number"
              name="pricePerNight"
              placeholder="e.g. 1500"
              value="<%= editing ? home.pricePerNight : "" %>"
              min="0"
              step="0.01"
              class="w-full px-4 py-3 border-2 border-blue-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 transition"
              required
            />
          </div>
          <div class="flex-1">
            <label class="block text-lg font-semibold text-gray-700 mb-2">Location</label>
            <input
              type="text"
              name="location"
              value="<%= editing ? home.location : "" %>"
              placeholder="e.g. Mumbai, India"
              class="w-full px-4 py-3 border-2 border-green-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400 transition"
              required
            />
          </div>
        </div>
        <div class="flex gap-4">
          <div class="flex-1">
            <label class="block text-lg font-semibold text-gray-700 mb-2">Rating (1-5)</label>
            <input
              type="number"
              name="rating"
              value="<%= editing ? home.rating : "" %>"
              placeholder="e.g. 4.5"
              min="1"
              max="5"
              step="0.1"
              class="w-full px-4 py-3 border-2 border-yellow-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-400 transition"
              required
            />
          </div>
          <div class="flex-1">
            <label class="block text-lg font-semibold text-gray-700 mb-2">Image URL</label>
            <input
              type="url"
              name="image"
              placeholder="e.g. https://..."
              value="<%= editing ? home.image : "" %>"
              class="w-full px-4 py-3 border-2 border-purple-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-400 transition"
              required
            />
          </div>
        </div>
        <div class="flex justify-center">
          <input type="submit" value="<%= editing ? "Update" : "Add Home"%>" class="w-1/2 bg-red-500 text-white py-3 rounded-lg font-bold text-lg hover:bg-red-600 transition duration-300 shadow-md cursor-pointer" />
        </div>
      </form>
    </main>
  </body>
</html>